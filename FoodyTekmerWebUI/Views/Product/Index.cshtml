@using FoodyTekmerEntityLayer.Concrete
@model List<Product>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1># Ürün Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Eski Fiyat</th>
        <th>Yeni Fiyat</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Name</td>
            <td>@item.OldPrice</td>
            <td>@item.NewPrice</td>
            <td>
                @if (item.Status == false)
                {
                    <span class="bg-dark p-1 text-white">Pasif</span>
                }
                else
                {
                    <span class="bg-warning p-1 text-white">Aktif</span>
                }
            </td>
            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/Product/CreateProduct" class="btn btn-success">Yeni Ürün Girişi</a>
